{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/*"],
      "@db": ["./src/db/index.ts"],
      "@schema": ["./src/schema/index.ts"],
      "@web/*": ["../../apps/web/src/*"],
      "@components/*": ["../../apps/web/src/components/*"]
    }
  },
  "include": ["src", "src/schema", "src/db", "src/types"]
}
